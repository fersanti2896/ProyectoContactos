@model IEnumerable<ContactoData>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Listado de Contactos
  </div>
  <div class="card-body">
    <a asp-action="Crear" 
       asp-controller="Contacto" 
       class="btn btn-success">
       <i class="bi bi-person-plus"></i>
       Crear Nuevo Contacto
    </a>
    <hr />
    <table class="table table-bordered">
        <thead>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Acciones</th>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Telefono</td>
                    <td>@item.Correo</td>
                    <td>
                        <a asp-action="Detalles"
                           asp-controller="Contacto"
                           asp-route-Id="@item.Id"
                           class="btn btn-info">
                           <i class="bi bi-info"></i>
                           Detalles
                       </a>
                        <a asp-action="Editar"
                           asp-controller="Contacto"
                           asp-route-Id="@item.Id"
                           class="btn btn-warning">
                           <i class="bi bi-pen"></i>
                           Editar
                       </a>

                        <a asp-action="Eliminar"
                           asp-controller="Contacto"
                           asp-route-Id="@item.Id"
                           class="btn btn-danger">
                           <i class="bi bi-trash3"></i>
                           Eliminar
                       </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
  </div>
</div>